<% provide(:title, 'Contact') %>
<h1>Contact</h1>


  <div class="row">

  <%= form_for(@contact) do |f| %>
  
  <div class="col-md-6 col-md-offset-3">

      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
           <%= f.label :enquiry, "enquiry" %>
           <%= f.text_area :enquiry, placeholder: "Compose new enquiry..." %>
      </div>
      <% @contact.name = @user.name if signed_in? %>
      <% @contact.email = @user.email if signed_in? %>
      <div class="field">
           <%= f.label :name, "Your Name" %>
           <%= f.text_field :name %>
      </div>
      <div class="field">
           <%= f.label :email, "Your email address" %>
           <%= f.email_field :email %>
      </div>

      <%= f.submit "Send", class: "btn btn-lg btn-primary" %>
  </div>
  <% end %>
  

  </div>
